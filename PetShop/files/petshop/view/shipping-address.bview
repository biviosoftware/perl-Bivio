	    ->put(cell_colspan => 2),
    ], [
	vs_form_field('ShippingAddressForm.Order.ship_to_first_name'),
    ], [
	vs_form_field('ShippingAddressForm.Order.ship_to_last_name'),
    ],
    vs_address_fields('OrderForm', '_2'),
    [
	ImageFormButton({
	    image => 'continue',
	    field => 'ok_button',
	    alt => 'Continue',
	}),
    ],
], {
    pad => 2,
})));
