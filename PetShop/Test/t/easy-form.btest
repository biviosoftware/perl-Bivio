test_setup('PetShop');
my($r) = random_string();
foreach my $u ('', 'root') {
    home_page();
    login_as($u)
	if $u;
    visit_uri('/fourem/public-file/EasyForm-btest.html');
    submit_form(OK => {
	'Input:' => "$u$r",
    });
    verify_text('completed');
}
visit_uri('/fourem/wiki/EasyForm_btest');
submit_form(OK => {
    'Input:' => "easyform$r",
});
verify_text('wiki completed');
visit_uri('/fourem/file/Forms/btest.csv');
verify_text(qr{\n.*,$r,OK\n.*,[^,]+root\@[^,]+,root$r,OK\n.*easyform$r,OK\n}s);
verify_local_mail(qr{root}) =~ /$r/;
