test_setup('PetShop');
home_page();
my($challenge) = qr{otp_md5\s+(\d+)\s+(\w+)};
test_deviance($challenge);
login_as('otp', '');
login_as('otp', 'password');
test_conformance();
login_as(
    'otp',
    test_use('Bivio::Util::OTP')->six_word_key(
	get_content() =~ $challenge,
	'password'),
);
do_logout();

#
# Test convert to OTP
#

home_page();
follow_link('Sign-in');
follow_link('New User');
my($name) = 'otp_' . random_string();
my($email) = generate_local_email($name);
submit_form(submit => {
    'Email:' => $email,
    'Password:' => 'password',
    'First Name:' => ucfirst($name),
    'Last Name:' => 'User',
});
follow_link('MyAccount');
follow_link('Convert your account to OTP');
my($new_key) = test_use('Bivio::Util::OTP')
    ->six_word_key(get_content() =~ $challenge, 'password');
test_deviance();
verify_text(my $dual_challenge = qr/Last OTP challenge.*New OTP challenge/is);
test_deviance('The password you entered does not match the value stored');
submit_form(OK => {
    'Current Password/Key:' => 'badpassword',
});
test_deviance('invalid OTP');
submit_form(OK => {
    'Current Password/Key:' => 'password',
});
test_deviance('You must supply a value for Confirm Key');
submit_form(OK => {
    'Current Password/Key:' => 'password',
    'New Key:' => $new_key,
});
test_deviance('password and confirm password fields do not match');
submit_form(OK => {
    'Current Password/Key:' => 'password',
    'New Key:' => $new_key,
    'Confirm Key:' => 'foofoo',
});
test_conformance();
submit_form(OK => {
    'Current Password/Key:' => 'password',
    'New Key:' => $new_key,
    'Confirm Key:' => $new_key,
});

#
# Test reset OTP
#

do_logout();
test_deviance($challenge);
login_as($email => '');
test_conformance();
login_as(
    $email,
    test_use('Bivio::Util::OTP')->six_word_key(
	get_content() =~ $challenge,
	'password'),
);
follow_link('MyAccount');
follow_link('Convert your account to OTP');
verify_text($dual_challenge);
my($old_seq, $old_seed, $new_seq, $new_seed) =
    get_content() =~ /$challenge.*$challenge/s;

my($next_key) = test_use('Bivio::Util::OTP')
    ->six_word_key($old_seq, $old_seed, 'password');
$new_key = test_use('Bivio::Util::OTP')
    ->six_word_key($new_seq, $new_seed, 'password');
test_deviance('Your OTP did not match');
submit_form(OK => {
    'Current Password/Key:' => 'badpassword',
});
test_deviance('invalid OTP');
submit_form(OK => {
    'Current Password/Key:' => $next_key,
});
test_deviance('You must supply a value for Confirm Key');
submit_form(OK => {
    'Current Password/Key:' => $next_key,
    'New Key:' => $new_key,
});
test_deviance('password and confirm password fields do not match');
submit_form(OK => {
    'Current Password/Key:' => $next_key,
    'New Key:' => $new_key,
    'Confirm Key:' => 'foofoo',
});
test_conformance();
submit_form(OK => {
    'Current Password/Key:' => $next_key,
    'New Key:' => $new_key,
    'Confirm Key:' => $new_key,
});
