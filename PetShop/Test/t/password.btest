follow_menu_link('home');
go_back();
my($uri) = extract_uri_from_local_mail($e, 'password');
# Generating forgot password link no longer resets password
login_as($e, $dp);
do_logout();
(my $bad = $uri) =~ s/(?<=\=)\S//;
visit_uri($bad);
verify_text('no longer valid');
visit_uri($uri);
verify_text(qr/(sign-out|\blogout\b)/i);
verify_no_text('Current Password');
submit_form('Cancel');
verify_text(qr/(sign-out|\blogout\b)/i);
verify_text('Birds');
