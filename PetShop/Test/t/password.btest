submit_form(Change => {
    'Current Password:' => 'wrong password',
    'New Password:' => $dp,
    'Re-enter New Password:' => $dp,
});
test_deviance('password and confirm password');
submit_form(Change => {
    'Current Password:' => $p,
    'New Password:' => "x$dp",
    'Re-enter New Password:' => $dp,
});
test_conformance();
submit_form(Change => {
    'Current Password:' => $p,
    'New Password:' => $dp,
    'Re-enter New Password:' => $dp,
});
do_logout();
login_as($e, $dp);
do_logout();
visit_uri($uri2);
verify_text('no longer valid');
login_as($e, $dp);
follow_link('myaccount', 'enable_time_based');
verify_text('set up two-factor');
my($totp_setup_key) = get_content() =~ /id="totp_setup_key">([^<]+)</;
$totp_setup_key =~ s/\s+//g;
my($compute_totp_code) = sub {
    do_test_backdoor(TOTP => join(' ', '-r', $e, 'compute', b_debug(MIME::Base32::decode_rfc3548($totp_setup_key))));
    my($code) = get_content();
    chomp($code);
    go_back();
    return $code;
};
follow_link('download');
my($recovery_codes) = [split("\n", get_content())];
go_back();
my($totp_setup_now) = Type_DateTime()->now;
submit_form({
    authenticator_code => $compute_totp_code->(),
    password => $dp,
});
verify_text(qr/two-factor authentication has been set up successfully/i);
do_logout();
follow_link('sign_in');
submit_form({
    email => $e,
    password => $dp,
});
verify_no_text(qr/sign-out/i);
verify_text(qr/6-digit authenticator code/i);
my($totp_code) = $compute_totp_code->();
test_deviance(qr/authenticator code is invalid/i);
submit_form({
    email => $e,
    password => $dp,
    '6-Digit Authenticator Code:' => $totp_code . 'x',
});
test_conformance();
date_time_now($totp_setup_now);
test_deviance(qr/authenticator code is invalid/i);
submit_form({
    email => $e,
    password => $dp,
    '6-Digit Authenticator Code:' => $totp_code,
});
test_conformance();
date_time_now(Type_DateTime()->add_seconds($totp_setup_now, 30));
$totp_code = $compute_totp_code->();
submit_form({
    email => $e,
    password => $dp,
    '6-Digit Authenticator Code:' => $totp_code,
});
do_logout();

# verify two-factor workflows

