clear_cookies();
follow_link(qw(Sign-in forgot_password));
test_deviance('must supply');
submit_form('Reset Password');
test_conformance();
submit_form('Reset Password' => {
    'Email:' => $e,
});
verify_text(qr{An email has been sent to.*\Q$e});
