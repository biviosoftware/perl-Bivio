verify_form({
    'New Password:' => undef,
    'Re-enter New Password:' => undef,
});
verify_text(qr/re-enter new password/i);
$add_seconds->(5 * 60);
$totp_code = $compute_totp_code->();
follow_link(qr/^petshop$/i, 'myaccount', 'change_password');
verify_no_text(qr/new password/i);
verify_no_text(qr/re-enter new password/i);
test_deviance(qr/password you entered does not match/i);
submit_form(Continue => {
    password => $p . 'x',
    authenticator_code => $totp_code,
});
test_deviance(qr/must supply a value for authenticator code/i);
submit_form(Continue => {
    password => $p,
});
test_deviance(qr/authenticator code is invalid/i);
submit_form(Continue => {
    password => $p,
    authenticator_code => '123456',
});
test_conformance();
submit_form(Continue => {
    password => $p,
    authenticator_code => $totp_code,
});
