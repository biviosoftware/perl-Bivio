#!/bin/sh
#
# $Id$
#
# Manage servers for the Societas Application
#

RCDIR=/etc/rc.d/init.d

case "$1" in
  start)
	$RCDIR/b-mail-dispatcher start
	$RCDIR/b-file-server start
	$RCDIR/httpd start
	;;
  stop)
	$RCDIR/httpd stop
	$RCDIR/b-file-server stop
	$RCDIR/b-mail-dispatcher stop
	;;
  status)
	$RCDIR/b-file-server status
	$RCDIR/b-mail-dispatcher status
	$RCDIR/httpd status
	;;
  restart)
	$RCDIR/b-mail-dispatcher restart
	$RCDIR/b-file-server restart
	$RCDIR/httpd restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart|reload|status}"
	echo "       Manage all Societas servers (mail,file,http) at once."
	exit 1
esac
exit 0
