FormModel();
req()->set_realm_and_user(qw(mail_forum mail_user1));
[
    [{
        subject => 's1',
	body => 'body1',
    }] => sub {
	my($msg) = req()->unsafe_get_captured_mail->[0];
	foreach my $p (
	    qr{From:.*mail.*mail_user1\@}i,
	    qr{To:.*mail_forum\@}i,
	    qr{Subject: s1}i,
	    qr{Sender:.*mail_forum\@}i,
	    qr{\n\nbody1},
	) {
	    assert_equals($p, $msg);
	}
	return 1;
    },
];
