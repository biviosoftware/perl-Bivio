Request('initialize_fully');
req()->set_realm('remote_file_copy_bunit');
my($rfcl) = model('RemoteFileCopyList', {})->set_cursor_or_die(0);
[
    class() => [
	{
	    method => 'execute',
	    compute_params => sub {
		my(undef, $params) = @_;
		req()->set_realm('guest');
		req()->put(path_info => $params->[0]);
		return [req()];
	    },
	    compute_return => sub {
		my($reply) = req('reply');
		return [$reply->get_output_type, $reply->get_output];
	    },
	} => [
	    'private' => ['text/plain', qr{^@{[class()]}#1\n\S+ /private/file.html\n\S+ /private/image.gif$}s],
	    'private/file.html' => ['text/html', qr{^<html>.*</html>}iss],
	],
	remote_list => [
	    sub {
		req()->set_realm('remote_file_copy_bunit');
		return [$rfcl];
	    } => [
		{map((lc($_) => [qr{^\S+$}, $_]),
	            map("/RemoteFileCopyBunit/file$_", 1..4))},
		undef,
	    ],
	],
	local_list => [
	    sub {
		model('RealmFile', {path => '/RemoteFileCopyBunit/file1'})->delete;
		model('RealmFile', {path => '/RemoteFileCopyBunit/file2'})
		    ->update_with_content({}, \('changed file2'));
		model('RealmFile')->create_with_content({
		    path => '/RemoteFileCopyBunit/file5',
		    user_id => realm_id('remote_file_copy_user'),
		}, \('file5'));
		return [$rfcl];
	    } => [
		{map((lc($_) => [qr{^\S+$}, $_]),
	            map("/RemoteFileCopyBunit/file$_", 2..5))},
	    ],
	],
	diff_lists => [
	    [$rfcl] => [{
		to_delete => FilePathArray('/RemoteFileCopyBunit/file5'),
		to_create => FilePathArray('/RemoteFileCopyBunit/file1'),
		to_update => FilePathArray('/RemoteFileCopyBunit/file2'),
	    }],
	],
	remote_get => [
	    ['/RemoteFileCopyBunit/file1', $rfcl] => [\('file1'), undef],
	],
    ],
];
