use HTML::Parser ();
my($res) = [];
my($p) = HTML::Parser->new(
    api_version => 3,
    text_h => [sub {push(@$res, shift)}, 'text'],
    start_h => [sub {
        my($tag, $attr) = @_;
        push(@$res, $attr->{class})
            if $tag && $tag =~ /ol|div/ && $attr->{class};
    }, 'tag,attr'],
);
$p->report_tags('a', 'div', 'ol');
$p->ignore_elements('script');
Widget({
    view_class_map => 'XHTMLWidget',
    parse_return => sub {
        my(undef, $actual, $expect) = @_;
        @$res = ();
        my($fh);
        open($fh, '<', \($actual->[0]));
        $p->parse_file($fh);
        close($fh);
        return [join(' ', @$res)];
    },
});
