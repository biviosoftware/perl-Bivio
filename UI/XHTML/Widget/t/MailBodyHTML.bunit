Widget();
my($trim_newline) = sub {
    my($ref) = @_;
    $$ref =~ s/(.*)\n$/$1/s || die();
    return $$ref;
};
[
    map(
	(
	    [${read_file($_)}, 'FORUM_MAIL_PART']
		=> $trim_newline->(read_file(($_ =~ /(.+)in$/)[0] . 'out')),
	),
	glob('MailBodyHTML/*.in'),
    ),
];
